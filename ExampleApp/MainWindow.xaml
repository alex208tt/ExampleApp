<Window x:Class="ExampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleApp"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800" ResizeMode="NoResize"
        Topmost="False" WindowState="Normal">
    <StackPanel Orientation="Vertical" Width="796" Height="421">
        <Label x:Name="first_text" Content="Calculator" HorizontalAlignment="Center" FontSize="30" FontFamily="Showcard Gothic"/>
        <Label x:Name="textBox" Height="23" Content="Привет всем" HorizontalAlignment="Center" MouseDoubleClick="closeLabel_MouseDoubleClick"/>
        <TextBox x:Name="userInput" Height="30" TextWrapping="Wrap"  HorizontalAlignment="Center" Width="300" FontSize="20" Background="White"/>
        <Button x:Name="btnMessageBox" Content="Открыть окно" Width="200" Margin="0, 20" Click="btnMessageBox_Click" />

    </StackPanel>
</Window>
